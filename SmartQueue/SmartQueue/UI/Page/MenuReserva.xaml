<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartQueue.UI.Page.MenuReserva"
             Title="Menu"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <Grid ColumnSpacing="10" RowSpacing="10" Margin="30,70,30,30" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Button Text="Cancelar Reserva" Grid.ColumnSpan="2" Grid.Row="2" BorderRadius="10" Clicked="Button_Clicked" x:Name="btnteste"/>
            <Button Text="Fazer Pedido" Grid.Column="0" Grid.Row="0" BorderRadius="10" Clicked="Button_Clicked"/>
            <Button Text="Ranking" Grid.Column="0" Grid.Row="1" BorderRadius="10" Clicked="Button_Clicked"/>
            <Button Text="Conta" Grid.Column="1" Grid.Row="0" BorderRadius="10" Clicked="Button_Clicked"/>
            <Button Text="Histórico" Grid.Column="1" Grid.Row="1" BorderRadius="10" Clicked="Button_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>