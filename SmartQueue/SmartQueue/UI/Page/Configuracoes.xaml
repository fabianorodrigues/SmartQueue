<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartQueue.UI.Page.Configuracoes"
             Title="Configurações">
    <ContentPage.Content>
        <Grid ColumnSpacing="10" RowSpacing="10" Margin="30,70,30,30" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <Button Text="Alterar Senha" Grid.Column="0" Grid.Row="0" BorderRadius="10" Clicked="Button_Clicked"/>
            <Button Text="Sobre" Grid.Column="0" Grid.Row="1" BorderRadius="10" Clicked="Button_Clicked"/>
            <Button Text="Sair" Grid.Column="0" Grid.Row="2" BorderRadius="10" Clicked="Button_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>