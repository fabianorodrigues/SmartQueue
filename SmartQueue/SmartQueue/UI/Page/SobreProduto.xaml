<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartQueue.UI.Page.SobreProduto"
             Title="Informações">
    <ContentPage.Content>
        <StackLayout Margin="30" Padding="5" HorizontalOptions="Center">
            <Label x:Name="lblNomeProduto" HorizontalOptions="Center" VerticalOptions="Center" 
                   FontAttributes="Bold"
                   FontSize="Large"/>
            <Image x:Name="imagem" HeightRequest="150"/>
            <Label x:Name="lblValorProduto" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Medium"/>
            <Label x:Name="lblDescricaoProduto" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>